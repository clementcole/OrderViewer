@model IEnumerable<SOViewer3.Models.JobHeaderDataModel>
@{
    ViewBag.Title = "Home Page";
}


<div id="summary" ng-show="summary">
    <h1>Summary View </h1>
    <section ng-repeat="x in SearchResults">
        <h2><b style="color:#3d80b8;">Sales Order:  {{x.ReferenceNo}}</b></h2>
        Brand: {{x.Brand}}<br />
        Mfg Plants: {{x.Brand}} Texas<br />
        TX MFG Date: {{x.TX_MFG_Date}}<br />
        TX Ship Date: {{x.Production_Schedule}}<br /><br />
        <b><span style="font-size: 20px;">Customer Name: {{x.Customer_Name}}</span></b><br />
        <b><span style="font-size: 20px;">Customer Phone ({{x.Customer_Phone}})</span></b><br />
        <b><span style="font-size: 15px;">Shipping Contact: {{x.Shipping_Contact}}</span></b><br />
        <b><span style="font-size: 15px;">Email Contact: {{x.SelltoContactEmail}}</span></b><br />
        <b><span style="font-size: 15px;">Shipping Address: {{x.Ship_to_Address}}</span></b><br />
        <b><span style="font-size: 15px;">Shipping City: {{x.ShiptoCity}}</span></b><br />
        <b><span style="font-size: 15px;">Shipping State: {{x.ShiptoState}}</span></b><br />
        <b><span style="font-size: 15px;">Shipping Zip Code: {{x.ShipToZipCode}}</span></b><br />
    </section>
</div>


